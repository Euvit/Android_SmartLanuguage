<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#cc993333"
                android:startColor="#ccff6666"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#cc99cc99" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#cc990000"
                android:startColor="#ccff3333"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#cc669966" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#cc990000"
                android:startColor="#ccff3333"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#cc669966" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>